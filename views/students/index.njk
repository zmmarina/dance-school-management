{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
    <a href="/students/create">New</a>
    <table width="100%">
        <thead>
            <tr>
                <th>Student</th>
                <th>Email</th>
                <th>Birthday</th>
                <th>Modalities</th>                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{ student.name }}
                </td>
                <td>{{student.email }}</td>
                <td>{{student.birth }}</td>
                <td>{{student.services }}</td>
                <td><a href="/students/{{student.id}}">See</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
        
    
</div>

{% endblock content %}