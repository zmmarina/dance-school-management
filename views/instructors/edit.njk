{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">
    <section class="avatar" style="background: url(https://source.unsplash.com/collection/2446638/500x500) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Edit Instructor</h3>

        <div class="item">            
            <div>Avatar URL</div>
            <div>
                <input 
                type="url" 
                name="avatar_url" 
                placeholder="http://"
                >
            </div>
        </div>

        <div class="item">            
            <div>Instructor</div>
            <div>
                <input 
                type="text" 
                name="name" 
                placeholder="Inform the instructor's name"
                >
            </div>
        </div>

        <div class="item">
            <div>Date of Birth</div>
            <div>
                <input 
                type="date" 
                name="birth" 
                >
            </div>
        </div>

        <div class="item">
            <div>Gender</div>
            <div>
                <span><input type="radio" name="gender" value="M">Male</span>
                <span><input type="radio" name="gender" value="F" checked>Female</span>
            </div>
        </div>

        <div class="item">
            <div>Modalities</div>
            <div> 
                <input 
                type="text" 
                name="services"
                placeholder="Separate the modalities taught by a comma"
                >
            </div>
        </div>
        
        <button type="submit">Save</button>
        
    </section>
</form>

{% endblock content %}